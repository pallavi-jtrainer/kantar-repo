package com.edforce.sampleproject.repository;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.edforce.sampleproject.entity.Student;

@Repository
public interface StudentRepository extends JpaRepository<Student, Long>{
	Optional<Student> findByStudentId(Long id);
	Optional<Student> findByEmail(String email);
	Optional<List<Student>> findAllByCourseId(Long id);
	
	@Modifying
	@Query("update Student s set s.courseId = :course where s.studentId = :id")
	int updateCourseId(@Param("id") Long id, @Param("course") Long course);
	
}
